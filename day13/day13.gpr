with "config/day13_config.gpr";
project Day13 is

   for Source_Dirs use ("src/", "config/");
   for Object_Dir use "obj/" & Day13_Config.Build_Profile;
   for Create_Missing_Dirs use "True";
   for Exec_Dir use "bin";
   for Main use ("day13.adb");

   package Compiler is
      for Default_Switches ("Ada") use Day13_Config.Ada_Compiler_Switches;
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es"); --  Symbolic traceback
   end Binder;

   package Install is
      for Artifacts (".") use ("share");
   end Install;

end Day13;
